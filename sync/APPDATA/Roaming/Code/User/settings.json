{
    "terminal.integrated.fontFamily": "'HackGen Console NF', 'Fira Code', monospace",
    "git.openRepositoryInParentFolders": "never",
    "debug.onTaskErrors": "showErrors",
    "explorer.confirmDelete": false,
    //
    // vim
    //
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.list.automaticKeyboardNavigation": false,
    //
    // webdev
    //
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    //
    // cs
    //
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    //
    // python
    //
    "python.analysis.typeCheckingMode": "strict",
    //
    // cpp
    //
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    // "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "c://Users//ousttrue//AppData//Roaming//Code//User//globalStorage//llvm-vs-code-extensions.vscode-clangd//install//17.0.3//clangd_17.0.3//bin//clangd.exe",
    "cmake.showOptionsMovedNotification": false,
    "cmake.configureOnOpen": false,
    "workbench.colorTheme": "Visual Studio 2019 Dark",
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "vala.languageServerPath": "D:/msys64/mingw64/bin/vala-language-server.exe",
    "C_Cpp.intelliSenseEngine": "disabled",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "mesonbuild.downloadLanguageServer": true,
    "git.enableSmartCommit": true,
}