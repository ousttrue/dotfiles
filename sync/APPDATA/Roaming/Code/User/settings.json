{
    "terminal.integrated.fontFamily": "'HackGen Console NF', 'Fira Code', monospace",
    "debug.onTaskErrors": "showErrors",
    "explorer.confirmDelete": false,
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.colorTheme": "Visual Studio 2019 Dark",
    "git.enableSmartCommit": true,
    "files.eol": "\n",
    //
    // vim
    //
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    //
    // webdev
    //
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    //
    // cs
    //
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "suggest.autoImports": false,
        "editor.suggestOnTriggerCharacters": false,
    },
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": false,
    //
    // python
    //
    "python.analysis.typeCheckingMode": "strict",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    //
    // cpp
    //
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    // "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "c:\\Users\\ousttrue\\AppData\\Roaming\\Code\\User\\globalStorage\\llvm-vs-code-extensions.vscode-clangd\\install\\19.1.2\\clangd_19.1.2\\bin\\clangd.exe",
    "cmake.showOptionsMovedNotification": false,
    "cmake.configureOnOpen": false,
    "mesonbuild.downloadLanguageServer": true,
    "vala.languageServerPath": "D:/msys64/mingw64/bin/vala-language-server.exe",
    "clang-format.executable": "C:/Program Files/LLVM/bin/clang-format.exe",
    // zig
    "zig.path": "${env:APPDATA}\\Code\\User\\globalStorage\\ziglang.vscode-zig\\zig_install\\zig.exe",
    "zig.zls.path": "zls",
    // glsl
    "glsl-canvas.useCompactFormatter": false,
    // other
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "explorer.confirmDragAndDrop": false,
    "C_Cpp.intelliSenseEngine": "disabled",
    "git.openRepositoryInParentFolders": "never",
    "python.defaultInterpreterPath": "C:\\ghq\\github.com\\openlawlibrary\\pygls\\env",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "xml.symbols.maxItemsComputed": 65534,
    "xml.server.vmargs": "-Xmx256M",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "outline.showArrays": false,
    "outline.showBooleans": false,
    "outline.showEnumMembers": false,
    "outline.showConstants": false,
    "outline.showConstructors": false,
    "outline.showEnums": false,
    "outline.showFields": false,
    "outline.showEvents": false,
    "outline.showFiles": false,
    "outline.showInterfaces": false,
    "outline.showKeys": false,
    "outline.showModules": false,
    "outline.showNamespaces": false,
    "outline.showNull": false,
    "outline.showNumbers": false,
    "outline.showObjects": false,
    "outline.showOperators": false,
    "outline.showPackages": false,
    "outline.showProperties": false,
    "outline.showStrings": false,
    "outline.showVariables": false,
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua"
    },
    "gitlens.views.scm.grouped.views": {
        "commits": true,
        "branches": true,
        "remotes": true,
        "stashes": true,
        "tags": true,
        "worktrees": true,
        "contributors": true,
        "repositories": true,
        "searchAndCompare": false,
        "launchpad": false
    },
    "git.ignoreSubmodules": true,
    "git.detectSubmodulesLimit": 0,
    "git.detectSubmodules": false,
    "git.blame.editorDecoration.enabled": true,
    "cmake.showConfigureWithDebuggerNotification": false,
}